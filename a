idf.py --list-targets
rm *.log
idf.py set-target esp32 | tee set-target-esp32.log
#idf.py set-target esp32p4  | tee set-target-esp32p4.log
#idf.py set-target esp32h2  | tee set-target-esp32h2.log

ask "want to run menuconfig" 5
if [ $? != 0 ]; then
   cp sdkconfig sdkconfig.old
   idf.py menuconfig 
   diff  sdkconfig sdkconfig.old  > sdk-diffs.log
fi

sleep 3
idf.py build


